placeholderStyle() {
  font-family SFUIDisplay-Regular sans-serif
  font-weight lighter
  color #FFFFFF
  opacity 0.7
}

/*!
input
 */
/deep/ .el-input {
  border-bottom 1px solid #FFFFFF
}
/deep/ .el-form-item.is-error .el-input{
  border-bottom 1px solid #F56C6C
}
/deep/ .el-input-group__prepend {
  background transparent
  border 0
  padding 0 2vw
}

/deep/ .el-input__inner {
  background transparent
  border 0
  padding 0 2vw
  font-size 0.8rem
  color #FFFFFF
  // Firefox
  &::-moz-placeholder {
    placeholderStyle()
  }
  // Internet Explorer 10+
  &:-ms-input-placeholder {
    placeholderStyle()
  }
  // Safari and Chrome
  &::-webkit-input-placeholder {
    placeholderStyle()
  }
}
/deep/ .el-form-item.is-success .el-input__validateIcon {
  color #FFFFFF
}

.el-form-item.is-error .el-input__inner,
.el-form-item.is-error .el-input__inner:focus,
.el-form-item.is-error .el-textarea__inner,
.el-form-item.is-error .el-textarea__inner:focus,
.el-message-box__input input.invalid,
.el-message-box__input input.invalid:focus {
  inputFocus = true
}
/deep/ .el-form-item.is-validating .el-input__validateIcon{
  color #FFFFFF
}
/*!
checkbox
 */
/deep/ .el-checkbox__inner {
  background-image linear-gradient(0deg, #F2F4F7 0%, #FFFFFF 100%)
  border 1px solid #DEE0E1
  border-radius 4px
  &::hover {
    border 0
    border-color transparent
  }
  &::after {
    border: 2px solid #6DD7B2;
    border-top: 0;
    border-left: 0;
  }
}

/deep/ .el-checkbox__label {
  font-size 0.8rem
  color #FFFFFF
  line-height 0.8rem
}

/deep/ .el-checkbox__input.is-checked + .el-checkbox__label {
  color #FFFFFF
}
/*!
button
 */
/deep/ .el-button--primary {
  background #FFFFFF
  border 0
  font-size 0.8rem
  color #00A6AE
  text-align center
